@using Microsoft.AspNetCore.Http
@using InternetBanking.Core.Application.ViewModels.Admin;
@using StockApp.Core.Application.Dtos.Account
@using StockApp.Core.Application.Helpers
@inject IHttpContextAccessor httpContextAccessor
@model UsersListsViewModel
@{
    ViewData["Title"] = "Administrar Usuarios";
    var currentUserLogged = httpContextAccessor.HttpContext.Session.Get<AuthenticationResponse>("user");
}
<div class="row mb-4">
    <div class="col-md-4">
        <h2>Administrar Usuarios</h2>
    </div>

    <div class="col-md-3 offset-5">
        <a class="btn btn-outline-primary" asp-controller="User" asp-action="Create">Crear Usuario</a>
    </div>
</div>


<div class="row">
    <div>
        <!--- \\\\\\\Post-->
        <div class="card gedf-card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="clients-tab" data-toggle="tab" href="#clients" role="tab" aria-controls="clients" aria-selected="false">Clientes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="admins-tab" data-toggle="tab" role="tab" aria-controls="admins" aria-selected="true" href="#admins">Administradores</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="clients" role="tabpanel" aria-labelledby="clients-tab">
                        <table class="table table-striped table-hover">
                          <thead>
                            <tr>
                              <th scope="col">Nombre</th>
                              <th scope="col">Apellido</th>
                              <th scope="col">Email</th>
                              <th scope="col">Usuario</th>
                              <th scope="col">Estado</th>
                              <th scope="col">Acciones</th>
                            </tr>
                          </thead>
                          <tbody>
                            @if (Model.Clients.Count == 0)
                            {
                                <tr>
                                    <td colspan="6">No hay clientes agregados a la base de datos</td>
                                </tr>
                            }else{
                                @foreach (var client in Model.Clients)
                                {
                                    string trClass = !client.IsActive ? "table-warning" : "";
                                    <tr class="@trClass">
                                      <td>@client.FirstName</td>
                                      <td>@client.LastName</td>
                                      <td>@client.Email</td>
                                      <td>@client.UserName</td>
                                      <td>
                                        @if (client.IsActive)
                                        {
                                            <p>Activo</p>
                                        }else{
                                            <p>Inactivo</p>
                                        }
                                    </td>
                                      <td>
                                        @if(client.IsActive){
                                            <a class="btn btn-outline-danger" asp-controller="User" asp-action="SetUserStatus" asp-route-id="@client.Id">Desactivar</a>
                                        }else{
                                            <a class="btn btn-outline-success" asp-controller="User" asp-action="SetUserStatus" asp-route-id="@client.Id">Activar</a>
                                        }
                                        <a class="btn btn-outline-warning" asp-controller="User" asp-action="Edit" asp-route-id="@client.Id">Editar</a>
                                      </td>
                                    </tr>
                                }
                            }
                                
                            @*<tr>
                              <th scope="row">2</th>
                              <td>Jacob</td>
                              <td>Thornton</td>
                              <td>noc</td>
                            </tr>
                            <tr>
                              <th scope="row">3</th>
                              <td colspan="2">Larry the Bird</td>
                              <td>aja</td>
                            </tr>*@
                          </tbody>
                        </table>
                    </div>


                    <div class="tab-pane fade" id="admins" role="tabpanel" aria-labelledby="admins-tab">
                        <table class="table table-striped table-hover">
                          <thead>
                            <tr>
                              <th scope="col">Nombre</th>
                              <th scope="col">Apellido</th>
                              <th scope="col">Email</th>
                              <th scope="col">Usuario</th>
                              <th scope="col">Estado</th>
                              <th scope="col">Acciones</th>
                            </tr>
                          </thead>
                          <tbody>
                              @if (Model.Admins.Count == 0)
                            {
                                <tr>
                                    <td colspan="6">No hay administradores agregados a la base de datos</td>
                                </tr>
                            }else{
                                @foreach (var admin in Model.Admins)
                                {
                                    string trClass = !admin.IsActive ? "table-warning" : "";
                                    <tr class="@trClass">
                                      <td>@admin.FirstName</td>
                                      <td>@admin.LastName</td>
                                      <td>@admin.Email</td>
                                      <td>@admin.UserName</td>
                                      <td>
                                        @if (admin.IsActive)
                                        {
                                            <p>Activo</p>
                                        }else{
                                            <p>Inactivo</p>
                                        }
                                    </td>
                                      <td>
                                        @if (admin.Id != currentUserLogged.Id)
                                        {
                                            @if (admin.IsActive)
                                            {
                                                <a class="btn btn-outline-danger" asp-controller="User" asp-action="SetUserStatus" asp-route-id="@admin.Id">Desactivar</a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-outline-success" asp-controller="User" asp-action="SetUserStatus" asp-route-id="@admin.Id">Activar</a>
                                            }
                                            <a class="btn btn-outline-warning" asp-controller="User" asp-action="Edit" asp-route-id="@admin.Id">Editar</a>
                                        }else{
                                            <p>No puedes modificar tu propio usuario</p>
                                        }
                                    </td>
                                    </tr>
                                }
                            }
                            @*<tr>
                              <th scope="row">2</th>
                              <td>Jacob</td>
                              <td>Thornton</td>
                              <td>noc</td>
                            </tr>
                            <tr>
                              <th scope="row">3</th>
                              <td colspan="2">Larry the Bird</td>
                              <td>aja</td>
                            </tr>*@
                          </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- Post /////-->
    </div>
</div>


<!--Modales para agregar usuarios-->

<!-- Modal Clientes -->
<div class="modal fade" id="agregarCliente" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Agregar Cliente</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Cliente
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal Administradores -->
<div class="modal fade" id="agregarAdmin" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Agregar Administrador</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Admin
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Guardar</button>
      </div>
    </div>
  </div>
</div>




